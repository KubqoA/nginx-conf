usage() {
    cat <<EOF
Usage: $0 [options]

-h : display this help and exit
-v : output version information and exit
EOF
}

version() {
    sed -n "/sed/d;s/## //gp" $0
}

while getopts ":hv" opt; do
  case ${opt} in
    v )
        version
        exit 0
        ;;
    h | * )
        usage
        ;;
   esac
done

exit 1
